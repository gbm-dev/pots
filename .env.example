# Telnyx SIP Credentials (Credential-based authentication)
TELNYX_SIP_USER=your_sip_username
TELNYX_SIP_PASS=your_sip_password
TELNYX_SIP_DOMAIN=sip.telnyx.com
# Required outbound caller ID presented to Telnyx (must be a valid number on your account)
TELNYX_OUTBOUND_CID=+15551234567
# Optional caller ID display name
TELNYX_OUTBOUND_NAME=OOB-Console-Hub

# SSH port for OOB user access
SSH_PORT=2222

# Number of virtual modem instances (default 8)
MODEM_COUNT=8

# Stable device path prefix exposed to the Go app
MODEM_DEVICE_PREFIX=/dev/ttyIAX

# D-Modem tuning
# Recommended for modem reliability; can be overridden per deployment.
DMODEM_AT_MS=AT+MS=132,0,4800,9600
# Dial command prefix (ATD is recommended for d-modem; avoids "T" in SIP URI)
MODEM_DIAL_PREFIX=ATD

# Docker build mode for D-Modem:
# - build: compile from source during docker build
# - prebuilt: use binaries from third_party/dmodem/
DMODEM_SOURCE=build
